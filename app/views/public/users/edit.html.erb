

<div class="col-3">
  <%= render "info", user: @user %>
</div>
<div class="col-9">
  <%= form_with model: @user, path: user_path(@user.id), method: :patch do |f| %>
    <div class="mb-1">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, placeholder: "名前" %>
    </div>
    <div class="mb-1">
      <%= f.label :introduction %><br>
      <%= f.text_area :introduction, placeholder: "紹介" %>
    </div>
    <div class="mb-1">
      <%= f.label :profile_image %><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
    </div>
    <div class="mb-1">
      <%= f.submit "Update" %>
    </div>
  <% end %>
</div>
