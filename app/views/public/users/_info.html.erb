<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  
  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
      <tr>
        <td>フォロー数</td>
        <td><%= link_to user.followings.count, user_followings_path(user.id) %></td>
      </tr>
      <tr>
        <td>フォロワー数</td>
        <td><%= link_to user.followers.count, user_followers_path(user.id) %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="text-center bg-info">
  <% if current_user != user %>
	  <% if current_user.following?(user) %>
		  <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete %>
	  <% else %>
		  <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "text-light" %>
	  <% end %>
  <% end %>
</div>

<div class="text-center">
    <%= link_to edit_user_path(user.id), class: "btn btn-secondary w-100" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>

