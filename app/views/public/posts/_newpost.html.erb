<div>
  <h2>New Post</h2>
  
  <%= form_with model: new_post do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.label :image %>
      <%= f.file_field :body,accept: "image/*" %>    
    </div>
    <div>
      <%= f.submit "Post" %>
    </div>
    
  <% end %>
  
</div>