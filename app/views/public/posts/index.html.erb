<div class="col-3">
  <%= render "public/users/info", user: current_user %>
  <%= render "newpost", new_post: @new_post %>
</div>

<div class="col-9">
  <%= render 'error', new_post: @new_post %>
  <h2>投稿一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image(50,50) %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        <% if current_user.id == post.user.id %>
          <td><%= link_to "Edit", edit_post_path(post.id) %> </td>
          <td><%= link_to "Destroy", post_path(post.id), method: :delete %> </td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


