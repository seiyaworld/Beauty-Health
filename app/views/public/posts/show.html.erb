<div class="col-3">
  <%= render "public/users/info", user: @post.user %>
  <%= render "newpost", new_post: @new_post %>
</div>

<div class="col-9">
  <h2>投稿詳細</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Text</th>
        <th>いいね</th>
        <th>コメント数</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <%= render 'table', post: @post %>
    </tbody>
  </table>
  <div class="comment_post">
    <%= render "public/comments/comment", post: @post, comments: @comments ,new_comment: @new_comment %>
  </div>
</div>

