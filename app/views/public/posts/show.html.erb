<div class="col-3">
  <%= render "public/users/info", user: @post.user %>
  <%= render "newpost", new_post: @new_post %>
</div>

<div class="col-9">
  <h2>投稿詳細</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @post.get_post_image(50,50) %></td>
        <td><%= @post.title %></td>
        <td><%= @post.body %></td>
      <% if current_user.id == @post.user.id %>
        <td><%= link_to "Edit", edit_post_path(@post.id) %> </td>
        <td><%= link_to "Destroy", post_path(@post.id),method: :delete %> </td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>

