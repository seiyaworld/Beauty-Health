

<div>
  <h3>コメント一覧</h3>
  <table class="table">
    <thead>
      <tr>
        <th>投稿者</th>
        <th>内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% comments.each do |comment| %>
        <tr>
          <td><%= comment.user.name %></td>
          <td><%= comment.comment %></td>
          <% if comment.user_id == current_user.id %>
          <td><%= link_to "Destroy", post_comment_path(comment.post_id,comment.id),method: :delete,remote: true %></td>
          <% end %>
        </tr>
      <% end %> 
    </tbody>
  </table>
</div>

<div>
<h4>新規投稿</h4>
<%= form_with model: [post, new_comment], local: false do |f| %>
  <div class="text_area">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>
  <div>
    <%= f.submit "投稿" %>
  </div>
<% end %>
</div>